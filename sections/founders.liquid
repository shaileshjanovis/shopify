{% javascript %}
$( document ).ready(function() {
$('.tab-content .tab-pane:first').addClass('active show');
$('.nav-tabs a:first').addClass('active show');
//var text = $('.tab-content .tab-pane:first h1').text();
//$('#title').html(text);
});

$('.tab-menu').on('click', 'a', function(e) {
var dataId = $(this).attr("data-id");
var isMobile = $(this).parent().parent().parent().parent().hasClass("ul_menu");
$(".tab-pane").hide();
$('#'+'tab-'+ dataId).show();
if (isMobile) {
$('html, body').animate({scrollTop:0}, 'slow');
}
$('.tab-menu li a').removeClass("active show");
$(this).addClass("active");
//var text2 = $('#'+'tab-'+ dataId).find('#inner-title').html();
//$('#title').html(text2);
e.preventDefault();
});

$('.parent').on("click",function() {
$(this).toggleClass("active");
$(this).closest(".menu-mob").toggleClass("active");
$(this).find(".sub-nav").toggle();
$(this).siblings(".nav-link").find(".sub-nav").hide();
$("body").toggleClass("overflow-hidden");
$("body").removeClass("scrolling-down");
});

$('.btn-close-menu').on("click",function() {
});

{% endjavascript %}