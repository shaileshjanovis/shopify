{% schema %}
{
	"name": "Home Top Slider",
	"class": "home_top_slider",
	"settings": [], 
	"blocks": [{
			"type": "type-block1",
			"name": "Slide with Image",
			"settings": [
                {
					"id": "slide-title",
					"type": "html",
					"label": "Title"
				},
				{
					"id": "slide-sub-title",
					"type": "html",
					"label": "Sub Title"
				},
                {
					"id": "slide-sub-text-web",
					"type": "richtext",
					"label": "Text Web"
				},
				{
					"id": "slide-sub-text-mob",
					"type": "richtext",
					"label": "Text Mobile"
				},
				{
					"id": "slide-link",
					"type": "url",
					"label": "Slide Link"
				},
				{
					"id": "slide-link-text",
					"type": "text",
					"label": "Slide link Button Text", 
					"default": "Discover the Collection"
				},
				{
					"id": "image-web",
					"type": "image_picker",
					"label": "Image Web"
				},
				{
					"id": "image-mobile",
					"type": "image_picker",
					"label": "Image Mobile" 
				}
			]
		},
		{
			"type": "type-block2",
			"name": "Slide with Video",
			"settings": [{
				"type": "header",
				"content": "Image Content"
			},
			{
				"type": "url",
				"id": "sliderlink",
				"label": "Slider video link"
			},
			{
				"type": "text",
				"id": "cap-head",
				"label": "Caption Heading",
				"default": "Banner Heading"
			},
			{
				"type": "image_picker",
				"id": "text_image",
				"label": "Text image"
			},
			{
				"type": "textarea",
				"id": "cap-subhead",
				"label": "Caption Heading",
				"default": "our black Friday sale is here!"
			},
			{
				"type": "text",
				"id": "btnText",
				"label": "Btn Text",
				"default": "Shop"
			},
			{
				"type": "url",
				"id": "btnUrl",
				"label": "Btn Url"
			},
			{
				"type": "text",
				"id": "btnText2",
				"label": "Btn Text",
				"default": "Shop"
			},
			{
				"type": "url",
				"id": "btnUrl2",
				"label": "Btn Url"
			}
			]
		}
	],
	"presets": [{
		"name": "Home Top Slider",
		"category": "Slider"
	}]
}
{% endschema %}
