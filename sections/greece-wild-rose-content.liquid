{% for block in section.blocks %}
  {% if block.type == 'block-carousel-section' %}
    <div class="main-carousel pages-carousel carousel-custom">
      <div class="slide-container three-item">
      {%- assign mycollection = collections[block.settings.collection] -%}
      {% for product in mycollection.products %}
            <a class="slide"  href="{{ product.url | within: collection }}" 
              class="carousel-cell"
              data-productid="{{ product.id }}"
              data-id="{{ first_variant.id }}"
              data-handle="{{ product_handle }}"
            >
            <div class="img-container">
              <img 
                data-src="{{  product.featured_image | img_url: 'master' | format: 'jpg' }}"
                alt="{{ block.settings.slide_heading }}" class="img-fluid lozad"/>
            </div>
            <div class="product-item--review empty"></div>
            <h6 class="product-name">{{ product.title }}</h6>
            {%if customer%}
              <div class="product-price">
                {{ product.price | money }}
              </div>
            {%endif%}
          </a>
      {% endfor %}
       {% if mycollection.products.size > 1 %}
          <div class="arrow back back-button" data-arrow="backward"><</div>
          <div class="arrow forward forward-button"  data-arrow="forward">></div>
        {% endif %}
       </div>
    </div>
  {% endif %}
{% endfor %}

