{% for block in section.blocks %}
{% if block.type == 'block-top-content' %}
<div class="breadcrumb">
    <a href="{% if request.locale.iso_code == 'el' %}/el{% endif %}{{ block.settings.map-link }}" class="back-to-map">
      < {{ block.settings.map-text }}</a>
    <div class="breadcrumb-col place-col">
      <span>{{ block.settings.breadcrumb-place-text }}:</span>
      <span>{{ block.settings.breadcrumb-place-whild-rose }}</span>
    </div>
    <div class="breadcrumb-col">
      <span>{{ block.settings.breadcrumb-farmer-text }}:</span>
      <span>{{ block.settings.breadcrumb-farmer-whild-rose }}</span>
    </div>
  </div>
  <h1 class="herb-title">{{ block.settings.herb-title-whild-rose }}</h1>
  <div class="row no-gutters top-img">
    <div class="col-xs-12 col-xs-12 col-md-6 col-lg-6">
      <img src="{{block.settings.top-img-1-whild-rose | img_url: 'master'}}" class="img-fluid" alt="" />
    </div>
    <div class="col-xs-12 col-xs-12 col-md-6 col-lg-6">
      <img src="{{block.settings.top-img-2-whild-rose | img_url: 'master'}}" class="img-fluid" alt="" />
    </div>
  </div>
  <div class="row no-gutters">
    <div class="col-xs-12 col-xs-12 col-md-12 col-lg-12">
      <div class="top-text">
        <p>
          {{ block.settings.top-text-whild-rose }}
        </p>
      </div>
    </div>
  </div>
{% endif %}
{% endfor %}

{% for block in section.blocks %}
{% if block.type == 'block-soil-lab-sect' %}
<div id="{{block.id}}" class="lab-section soil-lab-section">
  <div class="w-1784-web">
    <div class="row no-gutters">
      <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 ">
        <div class="category-item">
          <div class="inner">
            <span>
              {{block.settings.title-soil-lab | newline_to_br}}
            </span>
            <span class="num">{{ block.settings.num-soil-lab }}</span>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-xs-12 col-md-6 col-lg-6">
        <img src="{{block.settings.soil-img-1-whild-rose | img_url: 'master'}}" class="img-fluid" alt="" />
        <img src="{{block.settings.soil-img-2-whild-rose | img_url: 'master'}}" class="img-fluid" alt="" />
      </div>
      <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 ">
        <div class="text">
          {{ block.settings.soil-text-whild-rose }}
        </div>
      </div> 
    </div>
  </div>
  <div class="row no-gutters">
    <div class="col-xs-12 col-xs-12 col-md-12 col-lg-12 ">
      <img src="{{block.settings.soil-img-3-whild-rose | img_url: 'master'}}" class="img-fluid bottom-img-left" alt="" />
    </div>
  </div>
</div>
{% endif %}
