<div class="container-fluid" id="recycle">
  <div class="row hero-banner">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-0">
      <img src="{{section.settings.banner-image | img_url:''}}" class="banner-image">
      
    </div>
      <div class="content-block col-lg-5 col-md-6 ">
       <h4 class="banner-title"> {{section.settings.banner-heading}}</h4>
       <p class="banner-subtitle"> {{section.settings.subtitle}}</p>
       <a href="{{section.settings.button_link}}" class="banner-btn" >
         {{section.settings.button_label}}
       </a>
    </div>
   
  </div>

</div>
{% schema %}
  {
    "name": "Hero Section 3",
	"class": "section-margin",
    "settings": [
		{
	"type": "image_picker",
    "id"  : "banner-image",
	"label": "Author image"
	},
	{
	"type": "text",
    "id"  : "banner-heading",
	"label": "Heading"
	},
	{
	"type": "html",
    "id"  : "subtitle",
	"label": "Subtitle"
	},
	{
	"type": "url",
    "id"  : "button_link",
	"label": "Link"
	},
	{
	"type": "text",
    "id"  : "button_label",
	"label": "Link"
	}
]
  }
{% endschema %}

